@model CrudUniversity.Models.Inscripcion

@{
    ViewData["Title"] = "Delete";
}
<body style="background-color: beige; ">
    <h1 style="color: purple;">Eliminar Inscripción</h1>

<h3>Estas seguro de eliminar el registro?</h3>
<div>
    <h4>Inscripcion</h4>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                Estudiante
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estudiante.Nombre)
            </dd>
            <dt class="col-sm-2">
                Curso
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cursos.Titulo)
            </dd>
            <dt class="col-sm-2">
                Grado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.grado)
            </dd>
            

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdInscripcion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
</body>