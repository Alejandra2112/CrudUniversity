@model CrudUniversity.Models.Inscripcion

@{
    ViewData["Title"] = "Details";
}
<body style="background-color: beige; ">
    <h1 style="color: purple;">Detalles de Inscripción</h1>

<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.grado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.grado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cursos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cursos.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.estudiante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.estudiante.Nombre)
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdInscripcion" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

</body>